<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.onboarding.entername.EnterNameFragment">

    <ImageView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/iv_image_input_name"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_landing_page3"
        app:layout_constraintBottom_toTopOf="@id/tv_title_input_name"
         />

    <TextView
        android:id="@+id/tv_title_input_name"
        app:layout_constraintBottom_toTopOf="@+id/et_name"
        android:text="@string/text_tiltle_input_name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="@dimen/_18ssp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/et_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/text_hint_name"
        android:layout_marginHorizontal="@dimen/_24sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />





</androidx.constraintlayout.widget.ConstraintLayout>